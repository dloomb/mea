<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order details"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:id="@+id/titleOrderDetails"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:textColor="@color/text_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity (45 Prints)"
        android:id="@+id/textViewQuantity"
        android:layout_below="@id/titleOrderDetails"/>

    <TextView
        android:textColor="@color/text_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shipping $4.95"
        android:id="@+id/textViewShipping"
        android:layout_below="@id/textViewQuantity"/>

    <TextView
        android:textColor="@color/text_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL $60.50"
        android:textStyle="bold"
        android:id="@+id/textViewTotal"
        android:layout_below="@id/textViewShipping"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:id="@+id/buttonIncrement"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:id="@+id/buttonDecrement"
        android:layout_toLeftOf="@id/buttonIncrement"/>


</RelativeLayout>
